# Configuration du Projet Influenceur IA
# Ce fichier centralise les paramètres du projet

[PROJECT]
name = "Influenceur IA"
version = "1.0.0"
description = "Plateforme d'automatisation pour influenceurs avec IA"
author = "Équipe Influenceur IA"
license = "MIT"

[ENVIRONMENT]
default = "development"
supported = ["development", "staging", "production"]

[STRUCTURE]
# Organisation des dossiers
documentation_dir = "DOCUMENTATION"
docker_dir = "DOCKER"
code_dir = "CODE"
monitoring_dir = "MONITORING"
configuration_dir = "CONFIGURATION"

# Fichiers principaux
main_readme = "DOCUMENTATION/README.md"
roadmap = "DOCUMENTATION/ROADMAP.md"
docker_guide = "DOCUMENTATION/DOCKER.md"
project_structure = "DOCUMENTATION/PROJECT_STRUCTURE.md"

[DOCKER]
# Services principaux
services = [
    "traefik",
    "portainer", 
    "backend",
    "postgres",
    "redis",
    "minio",
    "ollama",
    "celery",
    "flower",
    "prometheus",
    "grafana"
]

# Ports par défaut
default_ports = {
    "traefik" = "80,443,8080",
    "backend" = "8000",
    "postgres" = "5432",
    "redis" = "6379",
    "minio" = "9000,9001",
    "ollama" = "11434",
    "flower" = "5555",
    "prometheus" = "9090",
    "grafana" = "3000"
}

[CODE]
# Structure du code source
main_source = "src"
modules = "modules"
api_version = "v1"
supported_languages = ["python", "javascript", "typescript"]

[FEATURES]
# Fonctionnalités principales
ai_models = ["llama2", "mistral", "codellama", "stable-diffusion"]
social_platforms = ["instagram", "tiktok", "twitter", "youtube", "fanvue", "onlyfans"]
content_types = ["post", "story", "reel", "video", "image", "text"]
automation_types = ["content_creation", "scheduling", "engagement", "analytics"]

[SECURITY]
# Configuration de sécurité
jwt_algorithm = "HS256"
token_expiry = "30m"
refresh_token_expiry = "7d"
password_min_length = 8
rate_limit_per_minute = 100

[PERFORMANCE]
# Configuration des performances
max_file_size = "10MB"
allowed_file_types = ["image/jpeg", "image/png", "image/gif", "video/mp4"]
cache_ttl = "3600"
database_pool_size = 20
celery_workers = 4

[MONITORING]
# Configuration du monitoring
metrics_enabled = true
logging_level = "INFO"
log_format = "json"
health_check_interval = "30s"
alerting_enabled = true

[BACKUP]
# Configuration des sauvegardes
enabled = true
retention_days = 30
schedule = "0 2 * * *"
include_volumes = true
include_database = true

[DEVELOPMENT]
# Configuration du développement
auto_reload = true
debug = true
hot_reload = true
test_coverage = true
linting = true

[PRODUCTION]
# Configuration de la production
debug = false
auto_reload = false
ssl_enabled = true
cdn_enabled = true
load_balancing = true
auto_scaling = true
