# Configuration de l'application
APP_NAME=Influenceur IA
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Configuration du serveur
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Configuration de la base de données PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/influenceur_ia
POSTGRES_DB=influenceur_ia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Configuration Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuration MinIO (S3-compatible)
MINIO_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=influenceur_ia
MINIO_REGION=us-east-1
MINIO_SECURE=false

# Configuration Ollama (LLMs locaux)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama2
OLLAMA_HOST=ollama
OLLAMA_PORT=11434

# Configuration Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Configuration JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuration CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:9001"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Configuration des APIs externes
OPENAI_API_KEY=your-openai-api-key
REPLICATE_API_KEY=your-replicate-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
INSTAGRAM_USERNAME=your-instagram-username
INSTAGRAM_PASSWORD=your-instagram-password
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=your-reddit-user-agent

# Configuration des plateformes NSFW
FANVUE_API_KEY=your-fanvue-api-key
ONLYFANS_API_KEY=your-onlyfans-api-key

# Configuration du monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Configuration des logs
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Configuration de la sécurité
RATE_LIMIT_PER_MINUTE=100
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/avi

# Configuration des modèles IA
DEFAULT_LLM_MODEL=llama2
DEFAULT_IMAGE_MODEL=stable-diffusion
DEFAULT_VIDEO_MODEL=pika-labs

# Configuration des réseaux sociaux
SOCIAL_MEDIA_ENABLED=true
AUTO_POSTING_ENABLED=false
CONTENT_MODERATION_ENABLED=true

# Configuration des notifications
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Configuration des webhooks
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=your-webhook-secret

# Configuration des backups
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Tous les jours à 2h du matin

# Configuration des tests
TESTING=false
TEST_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/influenceur_ia_test
TEST_REDIS_URL=redis://redis:6379/1
